<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.cellpinda.coin.wallet.ContactsActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        >

        <TableLayout
            android:id="@+id/item_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:stretchColumns="*"
            android:weightSum="1"
            >

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="0.25"
                >
                <Button
                    android:id="@+id/btn_recomendee_nm"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:theme="@style/AppTheme.Button.Colored"
                    android:gravity="left|center_vertical"
                    android:textSize="12sp"
                    android:paddingStart="9dp"
                    android:paddingEnd="9dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    />

                <TextView
                    android:id="@+id/txt_ago"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="right|center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    />

            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="0.25"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/txt_deposit_amt"
                    />

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="26dp"
                    android:gravity="left|center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    />

            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
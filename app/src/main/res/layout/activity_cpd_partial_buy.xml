<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:gravity="top|center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/custom_image"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo_symbol_color_small"
        />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:text="@string/txt_buy_partial"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:src="@drawable/ic_cmc"
            />
        <!--android:textAlignment="center"-->
        <TextView
            android:id="@+id/tv_eth_price_cmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorTextLighter"
            android:paddingLeft="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/colorPrimaryGray"
            android:text="@string/txt_tv_min_amt"
            />
        <TextView
            android:id="@+id/tv_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorPrimaryGray"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_eth_small"
            android:layout_marginLeft="8dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            />
        <EditText
            android:id="@+id/pay_amt"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/sel_border_oval"
            android:hint="@string/txt_hint_eth_amt"
            android:textColorHint="@color/colorPrimaryDarkAlpha"
            android:inputType="number"
            android:digits="0123456789."
            android:lines="1"
            android:maxLines="1"
            android:textSize="18sp"
            android:textColor="@color/colorTextLight"
            android:paddingStart="38dp"
            android:paddingEnd="55dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:gravity="right|center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorGray"
            android:text="ETH"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="12dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_warn_less_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:textColor="@color/colorOrangeDark"
        android:text="@string/txt_msg_min_amt_short"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <Button
            android:id="@+id/btn_10"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:theme="@style/AppTheme.Button.Small.FlatColored"
            android:text="10%"
            android:padding="0dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_25"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:theme="@style/AppTheme.Button.Small.FlatColored"
            android:text="25%"
            android:padding="0dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_50"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:theme="@style/AppTheme.Button.Small.FlatColored"
            android:text="50%"
            android:padding="0dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_75"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:theme="@style/AppTheme.Button.Small.FlatColored"
            android:text="75%"
            android:padding="0dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_90"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:theme="@style/AppTheme.Button.Small.FlatColored"
            android:text="90%"
            android:padding="0dp"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/border_bottom_dashed"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_pay_amt_desc"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:layout_gravity="right"
        android:textColor="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:theme="@style/AppTheme.Button.FlatColored"
            android:layout_marginRight="8dp"
            android:text="@string/dialog_cancel"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:theme="@style/AppTheme.Button.Colored"
            android:text="@string/txt_req_buy"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- RECEIVE ITEM(IN) -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.cellpinda.coin.wallet.MainActivity"
    android:id="@+id/symbol_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="50dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    >

    <TableLayout
        android:id="@+id/item_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:stretchColumns="*"
        android:weightSum="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="0.25"
            >
            <Button
                android:id="@+id/txt_btn_title"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/txt_btn_in"
                android:theme="@style/AppTheme.Button.Colored"
                android:gravity="left|center_vertical"
                android:textSize="12sp"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                />

            <TextView
                android:id="@+id/txt_ago"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="right|center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:singleLine="true"
                />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="0.25"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="26dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/txt_amount"
                />

            <TextView
                android:id="@+id/txt_amt"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="26dp"
                android:gravity="right|center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="0.25"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="26dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/txt_tx_hash"
                />

            <TextView
                android:id="@+id/txt_tx_hash"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="26dp"
                android:gravity="left|center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="middle"
                android:singleLine="true"
                />

        </TableRow>

        <TableRow
            android:id="@+id/address_row"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="26dp"
                android:gravity="left|center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/txt_from"
                />

            <TextView
                android:id="@+id/txt_from"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="26dp"
                android:gravity="left|center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="middle"
                android:singleLine="true"
                />

        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>
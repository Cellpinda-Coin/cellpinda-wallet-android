<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cellpinda.coin.wallet.MainActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/symbol_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="6dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_symbol_left_bg"
                        android:scaleType="centerCrop"
                        >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top|left"
                        android:paddingTop="10dp"
                        android:paddingBottom="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="6dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:layout_width="5dp"
                                android:layout_height="24dp"
                                android:background="@color/colorAccent"
                                android:layout_marginEnd="12dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextLight"
                                android:text="@string/txt_balance_symbol"
                                android:layout_gravity="left|center_vertical"
                                />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right|bottom"
                            android:padding="0dp"
                            android:layout_marginBottom="5dp"
                            >
                            <TextView
                                android:id="@+id/txt_total_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp"
                                android:text="@string/txt_total"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:id="@+id/txt_unit_cpd_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextLight"
                                android:text="CPD"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:gravity="bottom"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:id="@+id/txt_total_token_amt_int"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|bottom"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="24sp"
                                android:paddingEnd="4dp"
                                android:layout_toStartOf="@+id/txt_unit_cpd_1"
                                android:layout_toEndOf="@+id/txt_total_amt"
                                android:layout_centerInParent="true"
                                />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/border_bottom_dashed"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:gravity="right|bottom"
                            android:padding="0dp"
                            android:layout_marginTop="5dp"
                            >
                            <TextView
                                android:id="@+id/txt_bought_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="10sp"
                                android:text="@string/txt_buy"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:id="@+id/txt_unit_cpd_2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="10sp"
                                android:textColor="@color/colorTextLight"
                                android:text="CPD"
                                android:paddingEnd="4dp"
                                android:gravity="bottom"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:id="@+id/txt_token_amt_int"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|bottom"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="14sp"
                                android:paddingEnd="4dp"
                                android:layout_toStartOf="@+id/txt_unit_cpd_2"
                                android:layout_toEndOf="@+id/txt_bought_amt"
                                android:layout_centerInParent="true"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_marginTop="5dp"
                            android:gravity="right|bottom"
                            android:padding="0dp"
                            android:layout_marginBottom="5dp"
                            >
                            <TextView
                                android:id="@+id/txt_bonus"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center_vertical"
                                android:textColor="@color/colorTextLight"
                                android:textSize="10sp"
                                android:text="@string/txt_bonus"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:id="@+id/txt_unit_cpd_3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="10sp"
                                android:textColor="@color/colorTextLight"
                                android:text="CPD"
                                android:paddingEnd="4dp"
                                android:gravity="bottom"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:id="@+id/txt_token_bonus_int"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|bottom"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="14sp"
                                android:paddingEnd="4dp"
                                android:layout_toStartOf="@+id/txt_unit_cpd_3"
                                android:layout_toEndOf="@+id/txt_bonus"
                                android:layout_centerInParent="true"
                                />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/border_bottom_dashed"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:padding="0dp"
                            >
                            <TextView
                                android:id="@+id/txt_point"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextLight"
                                android:textSize="12sp"
                                android:text="@string/txt_point"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                />
                            <TextView
                                android:id="@+id/txt_unit_cpd_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/colorTextLight"
                                android:text="CPP"
                                android:paddingEnd="4dp"
                                android:gravity="bottom"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                />
                            <TextView
                                android:id="@+id/txt_point_int"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="24sp"
                                android:paddingEnd="4dp"
                                android:gravity="bottom|right"
                                android:layout_marginTop="6dp"
                                android:layout_toStartOf="@+id/txt_unit_cpd_4"
                                android:layout_toEndOf="@+id/txt_point"
                                android:layout_alignParentBottom="true"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="14sp"
                                android:layout_marginRight="6dp"
                                android:text="ⓑ"
                                />
                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom"
                                >
                                <Button
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_height="44dp"
                                    android:text="@string/txt_btn_point_exchange"
                                    android:theme="@style/AppTheme.Button.Colored"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal|top"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="0dp"
                                    android:enabled="false"
                                    app:backgroundTint="@color/colorPrimaryDarkAlpha"
                                    />

                                <Button
                                    android:id="@+id/btn_buy_product"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_height="44dp"
                                    android:text="@string/txt_btn_buy_product"
                                    android:theme="@style/AppTheme.Button.Colored"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal|top"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="0dp"
                                    android:enabled="false"
                                    app:backgroundTint="@color/colorPrimaryDarkAlpha"
                                    />
                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:text="ⓐ"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/eth_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                card_view:cardCornerRadius="6dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="9dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_eth_left_bg"
                        android:scaleType="centerCrop"
                        >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top|left"
                        android:paddingTop="10dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="6dp"
                            >

                            <LinearLayout
                                android:layout_width="5dp"
                                android:layout_height="24dp"
                                android:background="@color/colorAccent"
                                android:layout_marginEnd="12dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextLight"
                                android:text="@string/txt_balance_eth"
                                android:layout_gravity="left|center_vertical"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="12dp"
                            android:gravity="right|bottom"
                            android:orientation="horizontal"
                            android:padding="0dp"
                            >

                            <TextView
                                android:id="@+id/txt_eth_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right|bottom"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="24sp"
                                android:paddingEnd="4dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextLight"
                                android:text="ETH"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:gravity="bottom"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/border_bottom_dashed"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/colorTextLight"
                            android:text="@string/txt_msg_least_gas"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="10dp"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom"
                                >
                                <!--android:theme="@style/AppTheme.Button.Flat"-->
                                <Button
                                    android:id="@+id/btn_fill"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_btn_fill"
                                    android:theme="@style/AppTheme.Button.Colored"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal|top"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:enabled="false"
                                    app:backgroundTint="@color/colorPrimaryDarkAlpha"
                                    />

                                <Button
                                    android:id="@+id/btn_buy_cpd"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_btn_buy"
                                    android:theme="@style/AppTheme.Button.Colored"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal|top"
                                    android:layout_marginBottom="5dp"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    />
                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:text="ⓒ"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/border_bottom_dashed"
                />

            <!-- 3. 총 원화가치 -->
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                card_view:cardCornerRadius="6dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="6dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_krw_left_bg"
                        android:scaleType="centerCrop"
                        >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top|left"
                        android:paddingTop="10dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="6dp"
                            >

                            <LinearLayout
                                android:layout_width="5dp"
                                android:layout_height="24dp"
                                android:background="@color/colorAccentSecondaryDark"
                                android:layout_marginEnd="12dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextLight"
                                android:text="@string/txt_balance_krw"
                                android:layout_gravity="left|center_vertical"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right|bottom"
                            android:orientation="horizontal"
                            android:paddingBottom="3dp"
                            >

                            <TextView
                                android:id="@+id/txt_krw_val"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right|bottom"
                                android:textColor="@color/colorIndigo"
                                android:textSize="24sp"
                                android:paddingEnd="4dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextLight"
                                android:text="@string/txt_won"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:gravity="bottom"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>